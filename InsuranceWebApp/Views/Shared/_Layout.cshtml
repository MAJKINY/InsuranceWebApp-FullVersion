<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsuranceWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InsuranceWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InsuranceApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        }
                        @if(User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole(UserRoles.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Admin" ? "active" : "")"
                                    asp-area="" asp-controller="Admin" asp-action="Index">Clients</a>
                                </li>
                            }
                            @if (User.IsInRole(UserRoles.Client))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Client" ? "active" : "")"
                                    asp-area="" asp-controller="Client" asp-action="Details" asp-route-id="">My profile</a>
                                </li>
                            }
                            @if (User.IsInRole(UserRoles.Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Insurance" ? "active" : "")"
                                    asp-area="" asp-controller="Insurance" asp-action="Index">Insurances</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link @(currentAction == "Events" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Events">Events</a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "AboutApp" ? "active" : "")"
                            asp-area="" asp-controller="Home" asp-action="AboutApp">About app...</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav ms-auto d-flex flex-row align-items-center gap-3">
                                @if (User.IsInRole(UserRoles.Admin))
                                {
                                    <li class="nav-item">
                                        <span class="nav-link active">Admin</span>
                                    </li>
                                }
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-link nav-link p-0">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="navbar-nav ms-auto d-flex flex-row align-items-center gap-3">
                                <li class="nav-item">
                                    <a class="nav-link @(currentController == "Account" && currentAction == "Login" ? "active" : "")"
                                       asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            </ul>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InsuranceWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
