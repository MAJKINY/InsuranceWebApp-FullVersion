@model InsuranceWebApp.ViewModels.ClientListViewModel

@{
    ViewData["Title"] = "Clients";
}

<div class="container d-flex justify-content-center">
    <div class="table-responsive" style="max-width: 800px; width: 100%;">
        <h1 class="d-flex justify-content-center">Clients</h1>
        <p>
            <div class="d-flex justify-content-center">
                <a class="articles-button bg-primary rounded border-0 text-light" asp-action="Create">Create new client</a>
            </div>
            <div class="d-flex justify-content-center">
                <form asp-action="Index" method="get" class="mb-3 d-flex">
                    <input type="text" name="searchString" value="@Model.SearchString" class="form-control me-2" placeholder="Search by name" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </p>

        <table class="table table-bordered border-dark">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Clients)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address), @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td class="align-items-end" style="white-space: nowrap; width: 1%;">
                            <a class="articles-button bg-danger rounded border-0 text-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="articles-button bg-warning rounded border-0 text-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <nav aria-label="Pagination">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString">Prev</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Model.SearchString">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString">Next</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</div>

